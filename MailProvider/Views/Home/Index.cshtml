@model LoginModel

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#gmailLoginModal3">
    Gmail Login
</button>
<div class="modal fade" id="gmailLoginModal3" tabindex="-1" aria-labelledby="gmailLoginModal3Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-controller="Gmail" asp-action="Login" id="myForm">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title" id="gmailLoginModal3Label">Gmail Login</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <span>@Html.LabelFor(x => x.Email)</span>
                        <span id="Email">@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</span>
                    </div>
                    <div class="mb-3">
                        <span>@Html.LabelFor(x => x.Password)</span>
                        <span id="Password">@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
