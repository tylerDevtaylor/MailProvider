@{
    ViewData["Title"] = "Dashboard";
}
@model List<Message>
<div class="containerDashboard">
    <div class="taskBar">Mail</div>
    <div class="mailContainer">
        <div class="options">options</div>
        <div class="mail">
            <div>
                @foreach (var item in Model)
                {
                    <button id="messageModalButton" data-bs-toggle="modal" data-bs-target="#messageModal">
                        <div class="mailPackets">
                            <div>@TransmuteDateTime(@item.Date)</div>
                            <div id="messageHeader">@item.Header.Trim()</div>
                            <div id="messageBody">@item.Body</div>
                        </div>
                    </button>
                    <div id="messageModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="..." aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                <h5 class="modal-title" id="gmailLoginModal3Label">@TransmuteDateTime(@item.Date)</h5>
                                </div>
                                <div class="modal-body">
                                    body test
                                </div>
                                <div class="modal-footer">
                                   footer
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@functions {

    public string TransmuteDateTime(long? param)
    {
        var time = param ?? 0;
        DateTime dateTime = DateTimeOffset.FromUnixTimeMilliseconds(time).DateTime.AddHours(-4);
        return dateTime.ToString("g");
    }

}